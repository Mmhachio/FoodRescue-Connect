  <div class="container registration-container mt-4"style="width:40%">
    <h2>NGO Registration</h2>
    <form action="/registerngo" method="post">
      <div class="form-group">
        <label for="ngoName">NGO Name:</label>
        <input type="text" class="form-control" id="ngoName" name="ngoname" required autocomplete="off">
      </div>
      <div class="form-group">
        <label for="ngoEmail">Email:</label>
        <input type="email" class="form-control" id="ngoEmail" name="ngoemail" required autocomplete="off">
        <p style="font-size: small; color: red;"><%= message %></p>

      </div>
      <!-- <div class="form-group">
          <label for="ngoPassword">Password:</label>
          <input type="password" class="form-control" id="ngoPassword" name="ngopassword" required>
        </div> -->
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="ngopassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}$">
        <small id="passwordHelp" class="form-text text-muted">Password must contain at least one number, one uppercase letter, one lowercase letter, and be at least 8 characters long.</small>
      </div>
      <div class="form-group">
    <label for="phone">Phone Number:</label>
    <input type="tel" class="form-control" id="phone" name="phoneno" value="+91" pattern="^\+91[6789]\d{9}$" title="Please enter a valid Indian phone number starting with '+91' followed by 10 digits." required autocomplete="off">
    <p id="phone-error" style="color: red;"></p>
      <div class="form-group">
        <label for="ngoAddress">Address:</label>
        <textarea class="form-control" id="ngoAddress" name="ngoaddress" rows="3" required placeholder="Example:Assam don bosco Pin:781017 Landmark:Near Milijuli path"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
