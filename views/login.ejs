    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3" style="padding-bottom:55px;">
          <div class="login-container">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" id="user-tab" data-toggle="tab" href="#user" role="tab" aria-controls="user" aria-selected="true">User</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="ngo-tab" data-toggle="tab" href="#ngo" role="tab" aria-controls="ngo" aria-selected="false">NGO</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="admin-tab" data-toggle="tab" href="#admin" role="tab" aria-controls="admin" aria-selected="false">Admin</a>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade show active" id="user" role="tabpanel" aria-labelledby="user-tab">
                <!-- user form start -->
                <form action="/submituser" method="POST" onsubmit="return validateUserForm()">
                  <div class="form-group">
                    <label for="userEmail">Email</label>
                    <input id="userEmail" name="userEmail" type="email" class="form-control" placeholder="Enter email" required >
                  </div>
                  <div class="form-group">
                    <label for="userPassword">Password</label>
                    <input id="userPassword" name="userPassword" type="password" class="form-control" placeholder="Password" required>
                  </div>
                  <button type="submit" class="btn btn-primary">Login</button>
                </form>
                <div class="mt-3">
                  <p>Don't have an account? <a href="/userregister" style="font-size:0.7rem;"><br>Register as a User/Restaurant/Marriage Hall Owner</a></p>
                </div>
              </div>
              <div class="tab-pane fade" id="ngo" role="tabpanel" aria-labelledby="ngo-tab">
                <!-- ngo form start -->
                <form action="/submitngo" method="POST" onsubmit="return validateNgoForm()">
                  <div class="form-group">
                    <label for="ngoEmail">Email</label>
                    <input id="ngoEmail" name="ngoEmail" type="email" class="form-control" placeholder="Enter email">
                  </div>
                  <div class="form-group">
                    <label for="ngoPassword">Password</label>
                    <input id="ngoPassword" name="ngoPassword" type="password" class="form-control" placeholder="Password" required>
                  </div>
                  <button type="submit" class="btn btn-primary">Login</button>
                </form>
                <div class="mt-3">
                  <p>Don't have an account? <a href="/ngoregister" style="font-size:0.7rem;"><br>Register as a NGO</a></p>
                </div>
              </div>
              <div class="tab-pane fade" id="admin" role="tabpanel" aria-labelledby="admin-tab">
                <!-- Admin login form -->
                <form action="/adminlogin" method="POST" onsubmit="return validateAdminForm()">
                  <div class="form-group">
                    <label for="adminEmail">Email</label>
                    <input id="adminEmail" name="email" type="email" class="form-control" placeholder="Enter email" required>
                  </div>
                  <div class="form-group">
                    <label for="adminPassword">Password</label>
                    <input id="adminPassword" name="password" type="password" class="form-control" placeholder="Password" required>
                  </div>
                  <button type="submit" class="btn btn-primary">Login</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
